@using BlogTutorialHammadMaqbool.Models
@model Post

<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-10">
            <form asp-controller="Admin" asp-action="AddPost">

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" asp-for="Title"></label>
                            <input class="form-control" asp-for="Title" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" asp-for="SubTitle"></label>
                            <input class="form-control" asp-for="SubTitle" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" asp-for="Slug"></label>
                            <input class="form-control" asp-for="Slug" />
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label" asp-for="Date"></label>
                            <input class="form-control" asp-for="Date" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="form-label" asp-for="Image"></label>
                            <input class="form-control" asp-for="Image" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="form-label" asp-for="Content"></label>
                            <input class="form-control" asp-for="Content" />
                        </div>
                    </div>
                </div>

                <button class="btn btn-primary" type="submit">Create Post</button>

            </form>
        </div>
    </div>

</div>